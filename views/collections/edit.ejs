<% include ../partials/header %>
  <div class="container">
    <div class="col-lg-12">
      <h1 class="page-header">Add pictures
      </h1>
    </div>
    <div class="col-lg-12">
      <form class="" action="/collections/<%= Collection._id%>?_method=put" method="post">
        <div class="field-group">
          <label for="title">Title</label>
          <input class="form-control" type="text" name="collection[title]" value="<%= Collection.title %>">
        </div>
        <div class="field-group">
          <label for="image">Image URL</label>
          <input class="form-control" type="text" name="collection[image]" value="<%= Collection.image %>">
        </div>
        <div class="field-group">
          <label for="description">description</label>
          <textarea class="form-control" name="collection[description]"><%= Collection.description %></textarea>
        </div>
        <br>
        <button class="btn btn-info" type="submit">Update</button>
      </form>
    </div>
  </div>
<% include ../partials/footer %>
